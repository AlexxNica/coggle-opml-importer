/* nib utilities for stylus */
@import 'nib'

coggle-green = #9ed56b
lightgrey = #f3f3f3
lightblack = #2a2a2a
white = #fefefe
link-blue = #5bb7e3
midgrey = darken(lightgrey, 30%)

body
  font-family 'Helvetica' Arial sans-serif
  color lightblack
  background-color lightgrey
  margin: 0

header
  font-family 'Helvetica'
  padding 16px 8px
  margin 0
  color white
  text-shadow 0px 1px 19px darken(coggle-green, 40%)
  font-size 25px
  text-align center
  background linear-gradient(170deg, darken(coggle-green, 20%), coggle-green); 


a
  text-decoration none
  color link-blue

a:visited
  color lighten(link-blue, 30%)

.forkme
  position absolute
  top 0
  left 0
  border 0
.forkme img
  width 149px
  height 149px

.container
  width 540px
  margin 50px auto
  overflow hidden

.main-content
  width 500px
  background-color white
  padding 20px 20px
  border-radius 10px 10px
  color lightblack

p
  margin 20px 10px

p.hint
  color midgrey

#error
  color darken(red, 30%)
  background-color lighten(red, 80%)
  border-radius 6px
#error div
  padding 8px

ul.ingestlist
  padding 4px 12px 4px 12px
  list-style-type none

  li 
    padding 3px 8px 3px 8px
    font-size 18px
    color midgrey
    overflow none

.ingestitem
  cursor pointer

.ingestitem:hover
    color darken(lightgrey, 50%)

.ingestinput
  padding 4px 8px 4px 8px
  margin 8px 16px 8px 16px
  border 1px solid lightgrey
  border-radius 6px
  box-shadow none
  outline none
  width  60%
  font-size 16px

.ingestinput:focus
  border 1px solid midgrey

.created
  color white
  font-size 18px
  padding 10px 10px
  margin  5px auto 5px 20px 
  background linear-gradient(170deg, darken(coggle-green, 20%), coggle-green); 
  border-radius 10px
  box-sizing border-box
  display inline-block

  a
    color white


.logout
  padding 0
  margin 40px 4px 4px 4px
  font-size 13px

footer
  width 500px
  margin 50px auto
  background-color lightgrey
  color midgrey
  padding-top 5px
  font-size 13px


.spinner
  display inline-block
  margin 0
  width 70px
  text-align center

.spinner > div 
  width 14px
  height 14px
  background-color coggle-green

  border-radius 100%
  display inline-block
  animation bouncedelay 1.4s infinite ease-in-out
  /* Prevent first frame from flickering when animation starts */
  animation-fill-mode both

.spinner .bounce1
  -webkit-animation-delay -0.32s
  animation-delay -0.32s


.spinner .bounce2 
  -webkit-animation-delay -0.16s
  animation-delay -0.16s


@-webkit-keyframes bouncedelay 
  0%, 80%, 100% 
    transform scale(0.0) 


@keyframes bouncedelay 
  0%, 80%, 100%  
    transform scale(0.0)
  40%  
    transform scale(1.0)
  

